<h1>Tüm Gönderiler</h1> 
  
<table> 
  <tr> 
    <th>Gönderici</th>
    <th>Gönderi</th> 
  </tr>
 
  <% @posts.each do |post| %> 
    <tr>
      <td><%= post.title %></td> 
      <td><%= post.text %></td>
      <td><%= link_to "Göster", post %><td>
      <td><%= link_to "Düzenle", edit_post_path(post) %><td>
    </tr> 
  <% end %> 
</table>

